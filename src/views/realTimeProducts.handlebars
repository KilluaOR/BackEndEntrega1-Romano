<h2>Crear nuevo producto</h2>

<form id="productForm" class="mb-4">
  <input class="form-control mb-2" name="title" placeholder="Título" required />

  <input
    class="form-control mb-2"
    name="description"
    placeholder="Descripción"
  />

  <input class="form-control mb-2" name="code" placeholder="Código" />

  <input
    class="form-control mb-2"
    type="number"
    name="price"
    placeholder="Precio"
    required
  />

  <input
    class="form-control mb-2"
    type="number"
    name="stock"
    placeholder="Stock"
  />

  <input class="form-control mb-2" name="category" placeholder="Categoría" />

  <select class="form-control mb-2" name="status">
    <option value="true">Activo</option>
    <option value="false">Inactivo</option>
  </select>

  <input
    class="form-control mb-2"
    name="thumbnails"
    placeholder="Thumbnails (separadas por coma)"
  />

  <button class="btn btn-primary" type="submit">Crear producto</button>
</form>

<h2 class="mb-4 mt-5">Lista de Productos</h2>

<div id="productList" class="row">
  {{#each products}}
    <div class="col-md-4 mb-3">
      <div class="card" id="p-{{this._id}}">
        <div class="card-body">
          <h5 class="card-title">{{this.title}}</h5>
          <p class="card-text"><strong>Descripción:</strong> {{this.description}}</p>
          <p class="card-text"><strong>Precio:</strong> ${{this.price}}</p>
          <p class="card-text"><strong>Categoría:</strong> {{this.category}}</p>
          <p class="card-text"><strong>Stock:</strong> {{this.stock}}</p>
          <p class="card-text"><strong>Código:</strong> {{this.code}}</p>
          <p class="card-text"><strong>Status:</strong> {{#if this.status}}Activo{{else}}Inactivo{{/if}}</p>
          {{#if this.thumbnails}}
            {{#if this.thumbnails.length}}
              <p class="card-text"><strong>Imágenes:</strong></p>
              <div class="mb-2">
                {{#each this.thumbnails}}
                  <img src="{{this}}" alt="{{../this.title}}" class="img-thumbnail me-1" style="max-width: 100px; max-height: 100px;" />
                {{/each}}
              </div>
            {{/if}}
          {{/if}}
          <button class="btn btn-danger btn-sm delete-product-btn" data-product-id="{{this._id}}">Eliminar</button>
        </div>
      </div>
    </div>
  {{/each}}
</div>

