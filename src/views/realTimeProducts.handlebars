<h2>Crear nuevo producto</h2>

<form id="productForm" class="mb-4">
  <input class="form-control mb-2" name="title" placeholder="Título" required />

  <input
    class="form-control mb-2"
    name="description"
    placeholder="Descripción"
  />

  <input class="form-control mb-2" name="code" placeholder="Código" />

  <input
    class="form-control mb-2"
    type="number"
    name="price"
    placeholder="Precio"
    required
  />

  <input
    class="form-control mb-2"
    type="number"
    name="stock"
    placeholder="Stock"
  />

  <input class="form-control mb-2" name="category" placeholder="Categoría" />

  <select class="form-control mb-2" name="status">
    <option value="true">Activo</option>
    <option value="false">Inactivo</option>
  </select>

  <input
    class="form-control mb-2"
    name="thumbnails"
    placeholder="Thumbnails (separadas por coma)"
  />

  <button class="btn btn-primary" type="submit">Crear producto</button>
</form>

<h2 class="mb-4 mt-5">Lista de Productos</h2>

<ol id="productList" class="list-group list-group-numbered">
  {{#each products}}
    <li
      id="p-{{this._id}}"
      class="list-group-item d-flex justify-content-between align-items-center"
    >
      <span><strong>{{this.title}}</strong></span>
      <span class="badge bg-primary">${{this.price}}</span>
    </li>
  {{/each}}
</ol>

